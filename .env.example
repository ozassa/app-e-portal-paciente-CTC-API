# ===========================================
# App Telas Mágicas - Environment Variables
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/app_telas_magicas?schema=public"

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV="production"
API_VERSION="v1"

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN="https://yourdomain.com"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# TWILIO SMS CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+5511999999999"

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# SECURITY
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-min-32-chars"

# ===========================================
# APPLICATION
# ===========================================
APP_NAME="App Telas Mágicas"
APP_VERSION="1.0.0"
APP_URL="https://yourdomain.com"

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# ===========================================
# WHATSAPP BUSINESS API (Meta)
# ===========================================
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
SENTRY_DSN="https://your-sentry-dsn"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# ===========================================
# EXTERNAL APIS
# ===========================================
VIACEP_API_URL="https://viacep.com.br/ws"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# REDIS (for caching and sessions)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ===========================================
# LGPD COMPLIANCE
# ===========================================
DATA_RETENTION_DAYS=365
GDPR_CONTACT_EMAIL="privacy@yourdomain.com"
DPO_EMAIL="dpo@yourdomain.com"